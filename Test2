    @keyframes bounce {
      0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
      40% { transform: translateY(-30px); }
      60% { transform: translateY(-15px); }
    }
    @keyframes pop {
      0% { transform: scale(1); }
      50% { transform: scale(1.3); }
      100% { transform: scale(1); }
    }
    @keyframes sparkle {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }
    .animate-bounce {
      animation: bounce 1s;
    }
    .animate-pop {
      animation: pop 0.5s;
    }
    .animate-sparkle {
      animation: sparkle 2s infinite;
    }
  </style>
</head>
<body>
  <div style="width:400px; height:400px; overflow:auto; padding:10px; box-sizing:border-box; background-color:#f0f8ff; border:2px solid #ff69b4; border-radius:10px;">
    <div style="text-align:center; font-size:24px; margin-bottom:10px;">🌟 みんなの混雑状況アプリ 🎉</div>
    
